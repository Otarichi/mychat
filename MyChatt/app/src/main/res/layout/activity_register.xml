<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerActivity">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="რეგისტრაციის ფორმა"/>

        <EditText
            android:id="@+id/regNameEditText"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:hint="სახელი"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/regEmailEditText"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:hint="ელ-ფოსტა"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/regPasswordEditText"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="პაროლი"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/regButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="რეგისტრაცია"
            android:textSize="20sp" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/regLoginPageButton"
            android:gravity="center"
            android:textSize="15sp"
            android:text="ავტორიზაცია"
            android:layout_width="300dp"
            android:layout_height="60dp" />

    </LinearLayout>

</FrameLayout>